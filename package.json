{
  "name": "twitter_clone-api",
  "version": "1.0.0",
  "description": "A NodeJS APi that serves the site clone",
  "main": "index.ts",
  "scripts": {
    "start": "node build/server.ts",
    "start:dev": "nodemon --watch ./src --exec ts-node ./src/server.ts -e ts",
    "lint:fix": "eslint ./src/**/*.{ts,js} --fix",
    "format:check": "prettier --check --ignore-path .gitignore ./src/**/*.{ts,js}",
    "format:fix": "prettier --check --write --ignore-path .gitignore ./src/**/*.{ts,js}",
    "husky:prepare": "husky install",
    "test:staged": ""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Samuel-Ricardo/twitter_clone-api.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "@Samuel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Samuel-Ricardo/twitter_clone-api/issues"
  },
  "homepage": "https://github.com/Samuel-Ricardo/twitter_clone-api#readme",
  "dependencies": {
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  }
}
