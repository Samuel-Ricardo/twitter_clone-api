{
  "name": "twitter_clone-api",
  "version": "1.0.0",
  "description": "A NodeJS APi that serves the site clone",
  "main": "index.ts",
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "start": "node ./build/src/server.js",
    "start:dev": "nodemon --watch ./src --exec ts-node ./src/server.ts -e --swc",
    "start:docker": "npm run start:dev",
    "lint:fix": "eslint ./src/**/*.{ts,js} --fix",
    "format:fix": "prettier --check --write --ignore-path .gitignore ./src/**/*.{ts,js}",
    "format:check": "prettier --check --ignore-path .gitignore ./src/**/*.{ts,js}",
    "test": "jest --passWithNoTests --color",
    "test:staged": "jest --passWithNoTests --color --findRelatedTests",
    "test:coverage": "jest --coverage --passWithNoTests --color",
    "test:dev": "jest --watchAll --coverage --passWithNoTests --color",
    "test:docker": "npm run test:coverage && npm run test:dev",
    "husky:prepare": "husky install",
    "code:ci": "npm run format:fix && npm run lint:fix && npm run test:coverage",
    "db:sync": "prisma generate && prisma db push"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Samuel-Ricardo/twitter_clone-api.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "@Samuel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Samuel-Ricardo/twitter_clone-api/issues"
  },
  "homepage": "https://github.com/Samuel-Ricardo/twitter_clone-api#readme",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@types/socket.io": "^3.0.2",
    "argon2": "^0.31.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eventemitter2": "^6.4.9",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "inversify": "^6.0.1",
    "inversify-inject-decorators": "^3.1.0",
    "jest-environment-jsdom": "^29.6.2",
    "jest-environment-node": "^29.6.2",
    "jest-mock-extended": "^3.0.4",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.0.0",
    "prisma": "^5.0.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "swagger-ui-express": "^5.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.70",
    "@swc/jest": "^0.2.27",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.4.4",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
