{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": "./",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@logger": ["./src/modules/logger/index.ts"],
      "@env":["./src/modules/config/env/index.ts"],
      "@module":["./src/modules/index.ts"],
      "@module/*": ["./src/modules/*"],
      "@/*": ["./*"]
    }
  }
}
